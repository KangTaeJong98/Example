<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.taetae98.hilt.fragment.MainFragment"
        android:label="@string/main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_summonerEntityEditDialog"
            app:destination="@id/summonerEntityEditDialog" />
    </fragment>
    <dialog
        android:id="@+id/summonerEntityEditDialog"
        android:name="com.taetae98.hilt.dialog.SummonerEntityEditDialog"
        android:label="SummonerEntityEditDialog"
        tools:layout="@layout/dialog_edit_summoner_entity">
        <argument
            android:name="summonerEntity"
            app:argType="com.taetae98.hilt.data.SummonerEntity" />
    </dialog>
</navigation>